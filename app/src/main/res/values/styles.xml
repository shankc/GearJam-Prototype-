<resources>

    <!--
 Base application theme, dependent on API level. This theme is replaced
 by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
 -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="PhotoGrid">
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:listSelector">@drawable/photogrid_selector</item>
    </style>
    <style name="SeekBarseekbar" parent="android:Widget.Holo.SeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_scrubber_progress_horizontal_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/seekbar_scrubber_progress_horizontal_holo_dark</item>
        <item name="android:thumb">@drawable/seekbar_scrubber_control_selector_holo_dark</item>
    </style>


</resources>
