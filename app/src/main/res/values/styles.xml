<resources>

    <!--
 Base application theme, dependent on API level. This theme is replaced
 by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
 -->
    <style name="AppBaseTheme" parent="android:Theme.Light">

        <!--<item name="windowActionBar">false</item>
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="colorPrimary">#3F51B5</item>

        <!-- colorPrimaryDark is used for coloring the status bar -->
        <item name="colorPrimaryDark">#303F9F</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">#FFAB40</item>

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="SeekBarseekbar" parent="android:Widget.Holo.SeekBar">

        </style>

    <style name="PhotoGrid">
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:listSelector">@drawable/photogrid_selector</item>
    </style>



</resources>
